						"exec": [
							"pm.test(\"Response is 200 OK\", pm.response.to.have.status(200))",
							"pm.test(\"Response is JSON\", pm.response.to.be.json)",
							"pm.test(\"Response is an array\", pm.expect(pm.response.json()).to.be.an(\"array\"))",
							"pm.test(\"Array length is 1\", pm.expect(pm.response.json().length).to.equal(1))",
							"pm.test(\"Digimon name is correct\", pm.expect(pm.response.json()[0].name).to.equal(pm.collectionVariables.get(\"name\")))"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
