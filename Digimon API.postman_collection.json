	"item": [
		{
			"name": "Get All Digimon",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200 OK\", pm.response.to.have.status(200))",
							"pm.test(\"Response in JSON\", pm.response.to.be.json)",
							"pm.test(\"Response is an array\", pm.expect(pm.response.json()).to.be.an(\"array\"))",
							"pm.test(\"Response is correct\", function(){",
							"    let jsonData = pm.response.json()",
							"    for (let i = 0; i < jsonData.length; i++) {",
							"        pm.expect(jsonData[i]).to.have.property(\"name\")",
							"        pm.expect(jsonData[i]).to.have.property(\"img\")",
							"        pm.expect(jsonData[i]).to.have.property(\"level\")",
							"        pm.expect(jsonData[i].name).to.be.a(\"string\")",
							"        pm.expect(jsonData[i].img).to.be.a(\"string\")",
							"        pm.expect(jsonData[i].level).to.be.a(\"string\")",
							"    }",
							"",
							"    pm.collectionVariables.set(\"name\", jsonData[Math.floor(Math.random() * jsonData.length)].name)",
							"    pm.collectionVariables.set(\"level\", jsonData[Math.floor(Math.random() * jsonData.length)].level)",
							"})"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/digimon",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"digimon"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Digimon by Name",
			"event": [
